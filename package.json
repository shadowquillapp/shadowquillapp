{
	"name": "shadowquill",
	"version": "1.0.0",
	"author": "ShadowQuill <info@shadowquill.org>",
	"homepage": "https://shadowquill.org",
	"description": "ShadowQuill",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "npm run build:electron",
		"build:electron": "node build-electron.cjs",
		"dist:electron": "npm run build:electron && cross-env NEXT_PUBLIC_ELECTRON=1 electron-builder --win --mac --linux",
		"dist:win": "npm run build:electron && cross-env NEXT_PUBLIC_ELECTRON=1 electron-builder --win",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"dev": "cross-env SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs",
		"postinstall": "echo 'Installation complete'",
		"start": "cross-env SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs --prod",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.5.2",
		"@fortawesome/free-solid-svg-icons": "^6.5.2",
		"@fortawesome/react-fontawesome": "^0.2.0",
		"next": "^16.0.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"systeminformation": "^5.25.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@tailwindcss/postcss": "^4.0.15",
		"@types/node": "^20.19.10",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.0.0",
		"@vitest/coverage-v8": "^2.1.8",
		"cross-env": "^7.0.3",
		"electron": "^38.0.0",
		"electron-builder": "^26.0.12",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.0.15",
		"tsx": "^4.20.5",
		"typescript": "^5.8.2",
		"vitest": "^2.1.8"
	},
	"build": {
		"appId": "com.shadowquill.app",
		"productName": "ShadowQuill",
		"files": [
			"**/*",
			"!node_modules/.cache/**/*",
			"!**/*.map"
		],
		"asarUnpack": [
			"**/*.node",
			".next/**",
			"node_modules/next/**"
		],
		"directories": {
			"buildResources": "build"
		},
		"extraMetadata": {
			"main": "electron/main.cjs"
		},
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "public/branding/icon.icns"
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"icon": "public/branding/favicon.ico",
			"publisherName": "ShadowQuill",
			"signAndEditExecutable": true
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility",
			"maintainer": "ShadowQuill <info@shadowquill.org>",
			"synopsis": "ShadowQuill prompt building AI tool",
			"description": "ShadowQuill: build prompts local AI and storage",
			"artifactName": "${productName}-${version}-${arch}.${ext}"
		}
	},
	"overrides": {
		"glob": "^11.0.4"
	},
	"packageManager": "npm@11.4.2",
	"engines": {
		"node": ">=18.18.0"
	}
}
