{
	"name": "@shadowquillapp/shadowquill",
	"version": "0.0.0",
	"author": "ShadowQuill <info@shadowquill.org>",
	"homepage": "https://shadowquill.org",
	"description": "ShadowQuill",
	"private": false,
	"repository": "https://github.com/shadowquillapp/shadowquillapp",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"type": "module",
	"scripts": {
		"build": "npm run build:electron",
		"build:electron": "cross-env SUPPRESS_SUPPORT_NOTES=1 node electron/build-electron.cjs",
		"dist:electron": "npm run build:electron && cross-env SUPPRESS_SUPPORT_NOTES=1 NEXT_PUBLIC_ELECTRON=1 electron-builder --win --mac",
		"dist:win": "npm run build:electron && cross-env SUPPRESS_SUPPORT_NOTES=1 NEXT_PUBLIC_ELECTRON=1 electron-builder --win",
		"check": "biome check --config-path=config/biome.jsonc .",
		"check:unsafe": "biome check --config-path=config/biome.jsonc --write --unsafe .",
		"check:write": "biome check --config-path=config/biome.jsonc --write .",
		"dev": "cross-env SUPPRESS_SUPPORT_NOTES=1 SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs",
		"postinstall": "echo 'Installation complete'",
		"start": "cross-env SUPPRESS_SUPPORT_NOTES=1 SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs --prod",
		"test": "vitest run --config=config/vitest.config.ts",
		"test:watch": "vitest --config=config/vitest.config.ts",
		"test:coverage": "vitest run --config=config/vitest.config.ts --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"next": "^16.0.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"systeminformation": "^5.25.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@tailwindcss/postcss": "^4.0.15",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/estree": "^1.0.8",
		"@types/node": "^20.19.10",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.0.0",
		"@vitest/coverage-v8": "^4.0.14",
		"cross-env": "^7.0.3",
		"electron": "^38.0.0",
		"electron-builder": "^26.0.12",
		"jsdom": "^26.1.0",
		"tailwindcss": "^4.0.15",
		"tsx": "^4.20.5",
		"typescript": "^5.8.2",
		"vitest": "^4.0.14"
	},
	"build": {
		"appId": "com.shadowquill.app",
		"productName": "ShadowQuill",
		"files": ["**/*", "!node_modules/.cache/**/*", "!**/*.map"],
		"asarUnpack": ["**/*.node", ".next/**", "node_modules/next/**"],
		"directories": {
			"buildResources": "build"
		},
		"extraMetadata": {
			"main": "electron/main.cjs"
		},
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "public/branding/icon.icns"
		},
		"win": {
			"target": ["nsis", "portable"],
			"icon": "public/branding/favicon.ico",
			"publisherName": "ShadowQuill",
			"signAndEditExecutable": true
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	},
	"overrides": {
		"glob": "^11.0.4",
		"baseline-browser-mapping": "*"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"packageManager": "npm@11.4.2",
	"engines": {
		"node": ">=18.18.0"
	}
}
