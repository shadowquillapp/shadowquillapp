{
	"name": "shadowquillapp",
	"version": "0.4.0",
	"author": "ShadowQuill <info@shadowquill.org>",
	"homepage": "https://shadowquill.org",
	"description": "ShadowQuill",
	"type": "module",
	"files": [
		"src/**/*",
		"electron/**/*",
		"public/**/*",
		"scripts/**/*",
		"next.config.js",
		"tsconfig.json",
		"config/**/*",
		"package.json",
		"README.md",
		"LICENSE",
		".next/**/*"
	],
	"scripts": {
		"build": "npm run build:electron",
		"build:electron": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 SUPPRESS_SUPPORT_NOTES=1 node electron/build-electron.cjs",
		"check": "biome check --config-path=config/biome.jsonc .",
		"check:unsafe": "biome check --config-path=config/biome.jsonc --write --unsafe .",
		"check:write": "biome check --config-path=config/biome.jsonc --write .",
		"dev": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 SUPPRESS_SUPPORT_NOTES=1 SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs",
		"postinstall": "node scripts/postinstall.js",
		"start": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 SUPPRESS_SUPPORT_NOTES=1 SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs --prod",
		"test": "vitest run --config=config/vitest.config.ts",
		"test:watch": "vitest --config=config/vitest.config.ts",
		"test:coverage": "vitest run --config=config/vitest.config.ts --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"@tailwindcss/postcss": "^4.0.15",
		"cross-env": "^7.0.3",
		"next": "^16.0.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"systeminformation": "^5.25.11",
		"tailwindcss": "^4.0.15"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/estree": "^1.0.8",
		"@types/node": "^20.19.10",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.0.0",
		"@vitest/coverage-v8": "^4.0.14",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"electron-builder": "^26.0.12",
		"jsdom": "^26.1.0",
		"semantic-release": "^25.0.2",
		"electron": "^38.0.0",
		"tsx": "^4.20.5",
		"typescript": "^5.8.2",
		"vitest": "^4.0.14"
	},
	"build": {
		"appId": "shadowquillapp",
		"productName": "ShadowQuill",
		"files": [
			"**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
			"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
			"!**/node_modules/*.d.ts",
			"!**/node_modules/.bin",
			"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
			"!.editorconfig",
			"!**/._*",
			"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
			"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
			"!**/{appveyor.yml,.travis.yml,circle.yml}",
			"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
			"!node_modules/.cache/**/*",
			"!**/*.map"
		],
		"asar": true,
		"asarUnpack": ["**/*.node", ".next/**/*", "node_modules/next/**/*"],
		"extraMetadata": {
			"main": "electron/main.cjs"
		}
	},
	"overrides": {
		"glob": "^11.0.4",
		"baseline-browser-mapping": "*"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"packageManager": "npm@11.6.2",
	"engines": {
		"node": ">=25.2.1"
	}
}
