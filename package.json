{
	"name": "shadowquillapp",
	"version": "0.6.0",
	"author": "ShadowQuill <info@shadowquill.org>",
	"homepage": "https://shadowquill.org",
	"description": "ShadowQuill",
	"repository": {
		"type": "git",
		"url": "https://github.com/shadowquillapp/shadowquillapp.git"
	},
	"type": "module",
	"files": [
		"src/**/*",
		"electron/**/*",
		"public/**/*",
		"scripts/**/*",
		"next.config.js",
		"tsconfig.json",
		"config/**/*",
		"package.json",
		"README.md",
		"LICENSE",
		".next/**/*"
	],
	"scripts": {
		"build": "pnpm run build:electron",
		"build:electron": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 SUPPRESS_SUPPORT_NOTES=1 node electron/build-electron.cjs",
		"build:dmg": "pnpm run build:electron && electron-builder --mac --arm64 --publish never",
		"build:win": "pnpm run build:electron && electron-builder --win --x64 --publish never",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"dev": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 SUPPRESS_SUPPORT_NOTES=1 SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs",
		"postinstall": "node scripts/postinstall.js",
		"start": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 SUPPRESS_SUPPORT_NOTES=1 SKIP_ENV_VALIDATION=true ELECTRON=1 NEXT_PUBLIC_ELECTRON=1 node ./electron/start-electron.cjs --prod",
		"test": "vitest run --config=config/vitest.config.ts",
		"test:watch": "vitest --config=config/vitest.config.ts",
		"test:coverage": "vitest run --config=config/vitest.config.ts --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"@tailwindcss/postcss": "^4.1.17",
		"cross-env": "^10.1.0",
		"next": "^16.0.7",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"systeminformation": "^5.27.11",
		"tailwindcss": "^4.1.17"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@electron-forge/cli": "^7.10.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/eslint": "^9.6.1",
		"@types/eslint-scope": "^8.3.2",
		"@types/estree": "^1.0.8",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitest/coverage-v8": "^4.0.15",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"electron": "^39.2.6",
		"electron-builder": "^26.0.12",
		"jsdom": "^27.2.0",
		"semantic-release": "^25.0.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"build": {
		"appId": "shadowquillapp",
		"productName": "ShadowQuill",
		"files": [
			"**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
			"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
			"!**/node_modules/*.d.ts",
			"!**/node_modules/.bin",
			"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
			"!.editorconfig",
			"!**/._*",
			"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
			"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
			"!**/{appveyor.yml,.travis.yml,circle.yml}",
			"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
			"!node_modules/.cache/**/*",
			"!**/*.map"
		],
		"asar": true,
		"asarUnpack": [
			"**/*.node",
			".next/**/*",
			"node_modules/next/**/*"
		],
		"extraMetadata": {
			"main": "electron/main.cjs"
		},
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64"
					]
				}
			],
			"icon": "build/shadowquill-icon.icns",
			"category": "public.app-category.productivity"
		},
		"dmg": {
			"title": "${productName} ${version}",
			"icon": "build/shadowquill-icon.icns",
			"background": null,
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			],
			"window": {
				"width": 540,
				"height": 380
			}
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "build/icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	},
	"overrides": {
		"glob": "^11.0.4",
		"baseline-browser-mapping": "*"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"packageManager": "pnpm@9.15.0",
	"engines": {
		"node": ">=25.2.1"
	}
}
