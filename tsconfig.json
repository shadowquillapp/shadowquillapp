{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noFallthroughCasesInSwitch": true,
		"exactOptionalPropertyTypes": true,
		"checkJs": true,

		/* Bundled projects */
		"lib": ["dom", "dom.iterable", "ES2022"],
		"noEmit": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "preserve",
		"plugins": [{ "name": "next" }],
		"incremental": true,
		
		/* Path Aliases */
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".next",
		"public",
		"dist",
		"build",
		"src/server/storage-init.ts",
		"src/app/chat/_components/FiltersSidebar.tsx",
		"src/components/ThemeSwitcher.tsx",
		"src/styles/ThemeProvider.tsx",
		"src/server/local-model.ts",
		"src/server/gemma-context.ts",
		"src/server/image-style-presets.ts",
		"src/server/data-validation/**",
		"src/server/validation/**",
		"src/server/output-sanitize.ts",
		"src/server/gemma.ts"
	]
}
